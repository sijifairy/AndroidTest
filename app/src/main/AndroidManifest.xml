<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lizhe.mytest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"/>
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".MyTestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebViewActivity"/>
        <activity android:name=".ContactsActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".SpeechTestActivity"/>

        <receiver android:name=".LanguageChangeReceiver"/>

        <activity android:name=".TextureViewTestActivity"/>
        <activity android:name=".opengl.OpenGLTestActivity"/>

        <service
            android:name=".accessibility.PermissionAcquireService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config"/>
        </service>
        <service
            android:name=".accessibility.NotificationCollectorService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService"/>
            </intent-filter>
        </service>

        <activity android:name=".TextViewEffectiveTest">
        </activity>
        <activity
            android:name=".bottomnavigation.BottomNavigationActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".TabTestActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".LockerTestActivity"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".TestAffinity"
            android:taskAffinity=".test">
        </activity>
        <activity android:name=".LayerTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>